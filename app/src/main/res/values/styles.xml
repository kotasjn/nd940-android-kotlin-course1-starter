<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<!-- Button Styles -->
	<style name="PrimaryButton" parent="Widget.AppCompat.Button.Colored">
		<item name="colorButtonNormal">@color/colorPrimary</item>
		<item name="colorControlHighlight">@color/colorPrimaryDark</item>
		<item name="android:textColor">@color/white_text_color</item>
		<item name="colorAccent">@color/selected_green_color</item>
	</style>

	<style name="SecondaryButton" parent="Widget.AppCompat.Button.Colored">
		<item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
		<item name="android:textColor">@color/grey_text_color</item>
		<item name="colorControlHighlight">@color/colorPrimary</item>
	</style>

	<style name="InputLabelTextView" parent="Widget.AppCompat.TextView">
		<item name="android:textSize">14sp</item>
		<item name="android:fontFamily">sans-serif-medium</item>
	</style>

	<style name="InputEditText" parent="Widget.AppCompat.EditText">
		<item name="android:textSize">16sp</item>
	</style>

</resources>
