<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".InstructionFragment">

		<TextView
			android:id="@+id/instructions1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/fragment_horizontal_margin"
			android:layout_marginTop="@dimen/fragment_vertical_margin"
			android:layout_marginEnd="@dimen/fragment_horizontal_margin"
			android:layout_marginBottom="@dimen/fragment_vertical_margin"
			android:text="@string/instruction_paragraph_1"
			android:textSize="14sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/instructions2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/fragment_horizontal_margin"
			android:layout_marginTop="16dp"
			android:layout_marginEnd="@dimen/fragment_horizontal_margin"
			android:text="@string/instruction_paragraph_2"
			android:textSize="14sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/instructions1" />

		<TextView
			android:id="@+id/instructions3"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/fragment_horizontal_margin"
			android:layout_marginTop="16dp"
			android:layout_marginEnd="@dimen/fragment_horizontal_margin"
			android:text="@string/instruction_paragraph_3"
			android:textSize="14sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/instructions2" />

		<TextView
			android:id="@+id/instructions"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/fragment_horizontal_margin"
			android:layout_marginTop="16dp"
			android:layout_marginEnd="@dimen/fragment_horizontal_margin"
			android:text="@string/instruction_paragraph_4"
			android:textSize="14sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/instructions3" />

		<Button
			android:id="@+id/next_button"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/fragment_horizontal_margin"
			android:layout_marginEnd="@dimen/fragment_horizontal_margin"
			android:layout_marginBottom="@dimen/fragment_vertical_margin"
			android:text="@string/next_button"
			android:theme="@style/PrimaryButton"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />
	</androidx.constraintlayout.widget.ConstraintLayout>

</layout>